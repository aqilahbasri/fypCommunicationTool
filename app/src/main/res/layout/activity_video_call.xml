<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".assessment.VideoCallActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sub_container"
            android:background="@drawable/background_meeting_invitation" >
            
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_gravity="bottom|end"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="20dp"
                android:id="@+id/pub_container"/>

        </FrameLayout>

    </FrameLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/rejectButton"
        android:background="@drawable/bg_reject_interview"
        android:src="@drawable/ic_reject_interview"
        android:padding="10dp"
        app:tint="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:elevation="8dp"/>

</RelativeLayout>