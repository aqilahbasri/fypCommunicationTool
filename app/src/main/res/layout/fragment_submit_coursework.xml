<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SubmitCourseworkFragment">

    <TextView
        android:id="@+id/page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_gap"
        android:text="Coursework List"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/page_title"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@drawable/table_bottom_border"
        android:paddingVertical="@dimen/default_gap"
        android:id="@+id/courseworkDetails">

        <LinearLayout
            android:id="@+id/adapterViewHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/page_title"
            android:layout_weight="30"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="No"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Coursework Name"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Coursework Question"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Date Created"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="View File"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/adapterViewHeader"
            android:layout_weight="70" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/default_gap"
        android:text="Submit Coursework"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:layout_below="@id/courseworkDetails"
        android:id="@+id/submitCourseworkTitle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/submitButtons"
        android:layout_below="@id/submitCourseworkTitle">

        <Button
            android:id="@+id/selectButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:background="@drawable/roundbtn"
            android:text="SELECT FILE"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:background="@drawable/roundbtn"
            android:text="UPLOAD FILE"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_gap"
        android:padding="16sp"
        android:textSize="16sp"
        android:layout_below="@id/submitButtons"/>


</RelativeLayout>