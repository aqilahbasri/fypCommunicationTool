<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassingGradeFragment"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/page_title"
        android:layout_marginBottom="16dp"
        android:textSize="20sp"
        android:text="Passing Grade Details"
        android:textColor="?attr/colorAccent"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/results_table"
        android:background="@drawable/rectangle_border">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/table_row1"
            android:padding="@dimen/default_gap"
            android:weightSum="2"
            android:background="@drawable/table_bottom_border"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Section"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/table_row2"
            android:padding="@dimen/default_gap"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/section_name1"
                android:layout_weight="1"
                android:text="Assessment"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/mark_1"
                android:layout_weight="1"
                android:text="50"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/table_row3"
            android:padding="@dimen/default_gap"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/section_name2"
                android:layout_weight="1"
                android:text="Coursework"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/mark_2"
                android:layout_weight="1"
                android:text="50"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/table_row4"
            android:padding="@dimen/default_gap"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/section_name3"
                android:layout_weight="1"
                android:text="Interview"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/mark_3"
                android:layout_weight="1"
                android:text="50"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/table_row5"
            android:padding="@dimen/default_gap"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/section_name4"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textColor="?attr/colorAccent"
                android:text="*Must pass all sections*"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/mark_4"
                android:layout_weight="1"
                android:textSize="16sp"/>
        </TableRow>
    </TableLayout>

</LinearLayout>