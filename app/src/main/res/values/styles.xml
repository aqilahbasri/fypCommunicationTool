<resources>

    <!-- Base application theme. -->
    <!--    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#BA32AC</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#d561c9</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AssessmentCustomTheme" parent="AppTheme">
        <item name="colorPrimary">#BA32AC</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#32acba</item>
    </style>

    <style name="CustomMaterialDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Background Color-->
        <!--        <item name="android:background">#ffffff</item>-->
        <!--         Text Color for title and message-->
        <item name="colorOnSurface">@android:color/black</item>
        <!-- Text Color for buttons -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog"></style>

    <style name="timePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#32acba</item>
    </style>


    <!--    kielah main learning-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
